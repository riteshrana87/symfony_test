{# templates/products/detail.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ product.title }}{% endblock %}

{% block content %}
    <h1>{{ product.title }}</h1>
    <p>{{ product.shortDescription }}</p>
    <p><strong>Price:</strong> ${{ product.priceExclVat }}</p>
    <p><strong>Category:</strong> {{ product.category }}</p>

    {% if product.getImage() %}
        <img src="{{ asset('uploads/' ~ product.getImage()) }}" alt="{{ product.title }}" style="max-width: 300px;">
    {% else %}
        <p>No image available</p>
    {% endif %}

    <a href="{{ path('product_list') }}" class="btn btn-secondary">Back to Products</a>
{% endblock %}
